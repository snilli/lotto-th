{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"plugins": ["@nestjs/swagger"],
	"compilerOptions": {
		"deleteOutDir": true,
		"builder": {
			"type": "swc",
			"options": {
				"swcrcPath": ".swcrc"
			}
		},
		"typeCheck": true
	},
	"projects": {
		"migration": {
			"type": "application",
			"compilerOptions": {
				"tsConfigPath": "./tsconfig.cli.json"
			},
			"entryFile": "main-cli"
		}
	}
}
