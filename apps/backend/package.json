		"agentkeepalive": "^4.5.0",
		"axios": "^1.7.2",
		"cheerio": "1.0.0-rc.12",
		"dayjs": "^1.11.11",
		"drizzle-kit": "^0.22.7",
		"drizzle-orm": "^0.31.2",
		"drizzle-zod": "^0.5.1",
		"nest-commander": "^3.13.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.9",
		"@swc/cli": "^0.3.12",
		"@swc/core": "^1.5.29",
		"@swc/helpers": "^0.5.11",
