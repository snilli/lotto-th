{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"packageManager": "pnpm@9.3.0",
	"engines": {
		"node": "20.x"
	},
	"type": "commonjs",
	"scripts": {
		"migration:gen": "drizzle-kit generate",
		"migration:apply": "drizzle-kit migrate",
		"migration:drop": "drizzle-kit drop",
		"build": "nest build",
		"build:migration": "nest build migration",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"start:migrate": "node dist/cli/main-cli.js migrate --dir $(pwd)/drizzle",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node api/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"linta": "eslint \"{src,apps,libs,test}/**/*.spec.ts\" --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --poolOptions.threads.singleThread",
		"test:e2e": "vitest run --config ./test/vitest.config.e2e.ts",
		"clean": "rm -rf ./api && rm -rf .turbo",
		"clean-all": "rm -rf ./api && rm -rf .turbo && rm -rf node_modules"
	},
	"dependencies": {
		"@nestjs/axios": "^3.0.2",
		"@nestjs/cache-manager": "^2.2.2",
		"@nestjs/common": "^10.3.9",
